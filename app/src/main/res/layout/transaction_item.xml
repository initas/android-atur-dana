<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#ffffff"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:includeFontPadding="false"
            android:text="Hatsune Miku"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:includeFontPadding="false"
            android:text="Memakai dana ATM BCA"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:includeFontPadding="false"
            android:text="1 jam lalu"
            android:textSize="10dp" />

        <RelativeLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:background="#4A90E2">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/category_icon_class"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="I"
                android:textColor="#fff"
                android:textSize="75dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/category_icon_class"
                android:includeFontPadding="false"
                android:text="50,000 IDR"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/amount"
                android:layout_toRightOf="@id/category_icon_class"
                android:includeFontPadding="false"
                android:text="Telepon"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_container"
            android:gravity="right"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="{fa-bookmark-o}"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="32px"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:text="Comment"
                android:textSize="8dp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="{fa-comment-o}"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="16px"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:text="Comment"
                android:textSize="8dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>